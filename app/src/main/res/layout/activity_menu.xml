<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".MenuActivity">

    <TextView
        android:id="@+id/helloUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:text="Hello, Username"
        android:textColor="@color/text_color"
        android:textSize="30sp"
        android:textStyle="bold" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:id="@+id/kehadiranButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/button_background"
            android:padding="16dp"
            android:layout_row="0"
            android:layout_column="0"
            android:clickable="true">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_hadir2"
                android:padding="10sp"
                android:contentDescription="Icon Kehadiran" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kehadiran"
                android:textColor="@color/button_text_color"
                android:textSize="16sp"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/kepulanganButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/button_background"
            android:padding="16dp"
            android:layout_row="0"
            android:layout_column="1"
            android:clickable="true">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_hadir"
                android:contentDescription="Icon Kepulangan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kepulangan"
                android:textColor="@color/button_text_color"
                android:textSize="16sp"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/historyButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/button_background"
            android:padding="16dp"
            android:layout_row="1"
            android:layout_column="0"
            android:clickable="true">

            <ImageView
                android:id="@+id/historyButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_history"
                android:contentDescription="Icon History"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History"
                android:textColor="@color/button_text_color"
                android:textSize="16sp"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/logoutButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/button_background"
            android:padding="16dp"
            android:layout_row="1"
            android:layout_column="1"
            android:clickable="true"
            >

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_logout"
                android:contentDescription="Icon Logout" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textColor="@color/button_text_color"
                android:textSize="16sp"
                android:textAlignment="center" />
        </LinearLayout>

    </GridLayout>
</LinearLayout>
